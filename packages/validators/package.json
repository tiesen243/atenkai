{
  "name": "@attendify/validators",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "exports": {
    "./*": {
      "types": "./dist/*.d.ts",
      "default": "./src/*.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc --watch",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit"
  },
  "prettier": "@attendify/prettier-config",
  "dependencies": {
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@attendify/eslint-config": "workspace:*",
    "@attendify/prettier-config": "workspace:*",
    "@attendify/tsconfig": "workspace:*",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  }
}
