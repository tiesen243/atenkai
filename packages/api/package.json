{
  "name": "@attendify/api",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc --watch",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit"
  },
  "prettier": "@attendify/prettier-config",
  "dependencies": {
    "@attendify/auth": "workspace:*",
    "@attendify/db": "workspace:*",
    "@attendify/validators": "workspace:*",
    "@trpc/server": "catalog:api",
    "superjson": "catalog:api"
  },
  "devDependencies": {
    "@attendify/eslint-config": "workspace:*",
    "@attendify/prettier-config": "workspace:*",
    "@attendify/tsconfig": "workspace:*",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  }
}
